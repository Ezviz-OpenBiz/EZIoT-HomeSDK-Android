<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eziot.demo.user.EZIoTModifyPwdActivity">

    <LinearLayout
        android:id="@+id/terminalDeleteTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:text="@string/modifyPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputOldPwd"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/terminalDeleteTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputOldPwdEditText"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="输入旧密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputNewPwd"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/inputOldPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputNewPwdEditText"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="输入新密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ensureLayout"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/inputNewPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ensureButton"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完成"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>