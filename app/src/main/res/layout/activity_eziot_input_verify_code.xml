<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eziot.demo.generalSetting.EZIoTInputVerifyCodeActivity">

    <LinearLayout
        android:id="@+id/InputVerifyCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/common2_icon_return"
            android:id="@+id/input_verifyCode_go_back"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inputVerifyCode"
            android:textColor="@color/black"
            android:textSize="32dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/InputVerifyCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="验证码"
            android:id="@+id/InputVerifyCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/InputVerifyCodeButton"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完成"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>