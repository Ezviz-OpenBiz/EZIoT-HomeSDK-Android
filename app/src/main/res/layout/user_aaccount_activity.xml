<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    tools:ignore="HardcodedText"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ver_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入验证码"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:onClick="onClickGetCode"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickCheckCode"
            android:text="校验验证码" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickLogout"
            android:text="退出登录" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickDelAccount"
            android:text="注销账号" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickResetPwd"
            android:text="重置密码" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickRegisterAccount"
            android:text="注册账号" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickGetImageCode"
            android:text="获取图形验证码" />

        <ImageView
            android:id="@+id/imageCodeIv"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/waiting_bg"
            />



    </LinearLayout>


    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickGetOldVer"
            android:text="获取旧手机验证码" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickGetNewVer"
            android:text="获取新手机验证码" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickModifyPhone"
            android:text="修改手机号" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickModifyPassword"
            android:text="修改密码" />

    </LinearLayout>

    <EditText
        android:id="@+id/old_phone_ver_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="旧手机验证码"
        />

    <EditText
        android:id="@+id/new_phone_ver_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="新手机验证码"
        />

    <EditText
        android:id="@+id/account_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="账号名称"
        />

    <EditText
        android:id="@+id/pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kun299576+"
        android:hint="账号密码"
        />

    <EditText
        android:id="@+id/image_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="验证码"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLogin"
        android:text="登录"
        />


</LinearLayout>